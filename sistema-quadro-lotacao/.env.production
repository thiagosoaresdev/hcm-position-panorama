# Production Environment Configuration
# This file contains production-specific environment variables
# Sensitive values should be managed through Kubernetes secrets

# Application Configuration
NODE_ENV=production
PORT=8000
API_BASE_URL=https://quadro-lotacao.senior.com.br/api

# Database Configuration (values from K8s ConfigMap/Secrets)
DATABASE_HOST=postgres-service
DATABASE_PORT=5432
DATABASE_NAME=sistema_quadro_lotacao
DATABASE_SSL=true
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=50
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_IDLE_TIMEOUT=10000

# Redis Configuration (values from K8s ConfigMap/Secrets)
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=3000

# Senior Platform APIs
PLATFORM_AUTH_URL=https://api.senior.com.br/auth
PLATFORM_AUTHZ_URL=https://api.senior.com.br/authorization
PLATFORM_NOTIFICATIONS_URL=https://api.senior.com.br/notifications
PLATFORM_CLIENT_ID=QUADRO_VAGAS_APP

# JWT Configuration
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# RH Legado Integration
RH_LEGADO_API_URL=https://api.rhlegado.com.br
RH_LEGADO_TIMEOUT=30000
RH_LEGADO_RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Security Configuration
CORS_ORIGIN=https://quadro-lotacao.senior.com.br
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
CACHE_TTL=300
CACHE_MAX_SIZE=100mb

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1

# Background Jobs Configuration
JOB_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# File Upload Configuration
MAX_FILE_SIZE=20mb
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_CLEANUP_INTERVAL=300000