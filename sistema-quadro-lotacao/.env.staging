# Staging Environment Configuration
# This file contains staging-specific environment variables

# Application Configuration
NODE_ENV=staging
PORT=8000
API_BASE_URL=https://quadro-lotacao-staging.senior.com.br/api

# Database Configuration
DATABASE_HOST=postgres-staging-service
DATABASE_PORT=5432
DATABASE_NAME=sistema_quadro_lotacao_staging
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis Configuration
REDIS_HOST=redis-staging-service
REDIS_PORT=6379
REDIS_DB=1
REDIS_TTL=1800

# Senior Platform APIs (Staging endpoints)
PLATFORM_AUTH_URL=https://api-staging.senior.com.br/auth
PLATFORM_AUTHZ_URL=https://api-staging.senior.com.br/authorization
PLATFORM_NOTIFICATIONS_URL=https://api-staging.senior.com.br/notifications
PLATFORM_CLIENT_ID=QUADRO_VAGAS_APP_STAGING

# JWT Configuration
JWT_EXPIRES_IN=2h
JWT_REFRESH_EXPIRES_IN=3d

# RH Legado Integration (Staging)
RH_LEGADO_API_URL=https://api-staging.rhlegado.com.br

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Security Configuration
CORS_ORIGIN=https://quadro-lotacao-staging.senior.com.br
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Performance Configuration
COMPRESSION_ENABLED=true
CACHE_TTL=60

# Monitoring Configuration
METRICS_ENABLED=true
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.5

# Debug Configuration
DEBUG_ENABLED=true
DEBUG_SQL=false
DEBUG_REDIS=false